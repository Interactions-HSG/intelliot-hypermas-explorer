<!-- Property -->
<div class="scroll-container">
<div class="scroll-header">
  <h4 class="property-color slide-in-left">Properties </h4>
</div>
{{#if properties}}
    {{#each properties}}
      {{#if ../animate}}
        <div id="property_{{id}}" class="card dashcard slide-in-left" style="animation-delay:{{delay @index}}s -webkit-animation-delay:{{delay @index}}s">
        {{else}}
        <div id="property_{{id}}" class="card dashcard">
      {{/if}}
          <form id="form_{{id}}" name="property">
            <div class="card-header property-color-reverse">
              <div class="card-title">{{id}}</div>
              <button type="submit" form="form_{{id}}" class="clickable rounded-pill badge test-affordance">
                Test
              </button>
            </div>
            <div class="card-body">
              <p class="card-text">{{description}}
            </div>
          </form>
        </div>
  {{/each}}
{{else}}
  <div>
    <p class="empty-message">This artifact has no properties</p>
  </div>
{{/if}}

<!-- Actions -->
<div class="scroll-header">
  <h4 class="action-color slide-in-left">Actions </h4>
</div>
{{#if actions}}
    {{#each actions}}
      {{#if ../animate}}
        <div id="action_{{id}}" class="card dashcard slide-in-left" style="animation-delay:{{delay @index}}s -webkit-animation-delay:{{delay @index}}s">
        {{else}}
        <div id="action_{{id}}" class="card dashcard">
      {{/if}}
          <form id="form_{{id}}" name="action">
            <div class="card-header action-color-reverse">
              <div class="card-title">{{id}}</div>
              <button type="submit" form="form_{{id}}" class="clickable rounded-pill badge test-affordance">
                Test
              </button>
            </div>
            <div class="card-body">
              <p class="card-text">{{description}}
              {{#if input}}
                <div class="input-schema">
                  {{>schemaInput value=input key='Input:' required=input.required}}
                </div>
              {{/if}}
            </div>
          </form>
        </div>
  {{/each}}
{{else}}
  <div>
    <p class="empty-message">This artifact has no actions</p>
  </div>
{{/if}}

