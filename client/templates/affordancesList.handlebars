<!-- Property -->
<div class="scroll-container">
<div class="scroll-header">
  <h4 class="property-color slide-in-left">Properties </h4>
</div>
{{#if properties}}
    {{#each properties}}
      {{#if ../animate}}
        <div id="property_{{id}}" class="affordance card dashcard slide-in-left" style="animation-delay:{{delay @index}}s -webkit-animation-delay:{{delay @index}}s">
        {{else}}
        <div id="property_{{id}}" class="affordance card dashcard">
      {{/if}}
        <div class="card-header property-color-reverse">
          <div class="card-title">{{id}}</div>
          <span class="test-affordance badge rounded-pill clickable">Test</span>
        </div>
        <div class="card-body">
          <p class="card-text">{{description}}
        </div>
        </div>
  {{/each}}
{{else}}
  <div>
    <p class="empty-message">This artifact has no properties</p>
  </div>
{{/if}}

<!-- Actions -->
<div class="scroll-header">
  <h4 class="action-color slide-in-left">Actions </h4>
</div>
{{#if actions}}
    {{#each actions}}
      {{#if ../animate}}
        <div id="action_{{id}}" class="affordance card dashcard slide-in-left" style="animation-delay:{{delay @index}}s -webkit-animation-delay:{{delay @index}}s">
        {{else}}
        <div id="action_{{id}}" class="affordance card dashcard">
      {{/if}}
        <div class="card-header action-color-reverse">
          <div class="card-title">{{id}}</div>
          <span class="test-affordance badge rounded-pill clickable">Test</span>
        </div>
        <div class="card-body">
          <p class="card-text">{{description}}
          {{#if input}}
            <form id="form_{{id}}" class="input-schema">
              {{>schemaInput value=input key='Input:'}}
            </form>
          {{/if}}
        </div>
        </div>
  {{/each}}
{{else}}
  <div>
    <p class="empty-message">This artifact has no actions</p>
  </div>
{{/if}}

<!-- Events -->
<div class="scroll-header">
  <h4 class="event-color slide-in-left">Events </h4>
</div>
{{#if events}}
    {{#each events}}
      {{#if ../animate}}
        <div id="event_{{id}}" class="affordance card dashcard slide-in-left" style="animation-delay:{{delay @index}}s -webkit-animation-delay:{{delay @index}}s">
        {{else}}
        <div id="event_{{id}}" class="affordance card dashcard">
      {{/if}}
        <div class="card-header event-color-reverse">
          <div class="card-title">{{id}}</div>
          <span class="test-affordance badge rounded-pill clickable">Test</span>
        </div>
        <div class="card-body">
          <p class="card-text">{{description}}
        </div>
        </div>
  {{/each}}
{{else}}
  <div>
    {{!TODO support events and change this}}
    <p class="empty-message">Events are not yet supported.</p>
  </div>
{{/if}}
</div>