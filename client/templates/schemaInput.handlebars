{{#if (isBooleanType value.type)}}
  <div class="input-group input-group-sm mb-3">
    <span class="input-group-text">{{key}}</span>
    <select name="{{key}}" class="form-select form-select-sm">
      <option value="true" selected>True</option>
      <option value="false">False</option>
    </select>
  </div>
{{/if}}
{{#if (isNumberType value.type)}}
  <div class="input-group input-group-sm mb-3">
    <span class="input-group-text">{{key}}</span>
    <input type="number" name="{{key}}" class="form-control" value="{{average value.type value.minimum value.maximum}}" max="{{value.maximum}}" min="{{value.minimum}}" >
  </div>
{{/if}}
{{#if (isIntegerType value.type)}}
  <div class="input-group input-group-sm mb-3">
    <span class="input-group-text">{{key}}</span>
    <input type="number" name="{{key}}" step="1" pattern="\d*" class="form-control" value="{{average value.type value.minimum value.maximum}}" max="{{value.maximum}}" min="{{value.minimum}}" >
  </div>
{{/if}}
{{#if (isObjectType value.type)}}
  <div class="object-schema">
    <p>{{key}}</p>
    {{#each (toList value.properties)}}
      <div class="props">
        {{>schemaInput value=value key=key}}
      </div>
    {{/each}}
  </div>
{{/if}}
{{#if (isStringType value.type)}}
  <div class="input-group input-group-sm mb-3">
    <span class="input-group-text">{{key}}</span>
    <input type="text" name="{{key}}"  class="form-control">
  </div>
{{/if}}
{{#if (isArrayType value.type)}}
  {{!TODO support for arrays}}
  <p>Not supporting array input at the moment</p>
{{/if}}